.home swiper {
    width: 700rpx;
    height: 450rpx;
}
.home swiper image {
      width: 93%;
      height: 95%;
      margin-top: 10rpx;
      margin-left: 50rpx;
      border-radius: 5%;
}
.home .cate-section {
    display: -webkit-box;
    display: -webkit-flex;
    display: flex;
    -webkit-justify-content: space-around;
            justify-content: space-around;
    -webkit-box-align: center;
