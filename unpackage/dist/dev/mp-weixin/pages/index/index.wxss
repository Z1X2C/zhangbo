            flex-wrap: wrap;
    padding: 30rpx 22rpx;
    background: #fff;
}
.home .cate-section .cate-item {
      display: -webkit-box;
      display: -webkit-flex;
      display: flex;
      -webkit-box-orient: vertical;
      -webkit-box-direction: normal;
      -webkit-flex-direction: column;
              flex-direction: column;
      -webkit-box-align: center;
      -webkit-align-items: center;
              align-items: center;
}
.home .cate-section image {
      width: 88rpx;
      height: 88rpx;
      margin-bottom: 14rpx;
      border-radius: 50%;
      opacity: .7;
      box-shadow: 4rpx 4rpx 20rpx rgba(250, 67, 106, 0.3);
}
.home .hot_goods {
    background: #eee;
}
.home .hot_goods .tit {
      height: 50px;
      line-height: 50px;
      color: #b50e03;
      text-align: center;
      letter-spacing: 20px;
      background: #fff;
      margin: 7rpx 0;
}
.home .goods_list {
    padding: 0 15rpx;
    display: -webkit-box;
    display: -webkit-flex;
    display: flex;
    -webkit-flex-wrap: wrap;
            flex-wrap: wrap;
    -webkit-box-pack: justify;
    -webkit-justify-content: space-between;
            justify-content: space-between;
}
.home .goods_list .goods_item {
      background: #fff;
      width: 355rpx;
      margin: 15px 0;
      border-radius: 5%;
      padding: 15rpx;
      box-sizing: border-box;
}
.home .goods_list .goods_item image {
        width: 100%;
        height: 340rpx;
        margin: 0 auto;
}
.home .goods_list .goods_item .price {
        color: #b50e03;
        font-size: 36rpx;
}
.home .goods_list .goods_item .price text:nth-child(2) {
          color: #C0C0C0;
          font-size: 28rpx;
          margin-left: 17rpx;
          text-decoration: line-through;
}
.home .goods_list .goods_item .name {
        font-size: 38rpx;
        line-height: 50rpx;
        padding-bottom: 15rpx;
        padding-top: 10rpx;
